version: '2'

services:

  https-portal:
    image: steveltn/https-portal
    container_name: https
    volumes:
      - ./logs/nginx:/var/log/nginx
    ports:
      - '80:80'
      - '443:443'
    environment:
      CLIENT_MAX_BODY_SIZE: '100M'
      GZIP: 'on'
      DOMAINS: 'test.foolcontrol.org -> http://wordpress:80'
      STAGE: '{{ stage }}'
    links:
      - wordpress
    restart: unless-stopped
    networks:
      - wp

  wordpress:
    links:
      - db:mysql
    # ToDo: implement option of using different version
    image: wordpress:{{ wp_version }}
    container_name: wp
    volumes:
      - ./wordpress:/var/www/html
      - ./wordpress/uploads.ini:/usr/local/etc/php/conf.d/uploads.ini
    environment:
      WORDPRESS_DB_USER: '{{ wp_db_user }}'
      WORDPRESS_DB_NAME: '{{ wp_db_name }}'
      WORDPRESS_DB_PASSWORD: '{{ wp_db_psw }}'
      WORDPRESS_DB_HOST: 'db'
      MYSQL_PORT_3306_TCP: '3306'
    restart: unless-stopped
    networks:
      - wp

  db:
    image: mysql:5.7
    container_name: db
    volumes:
      - ./wp-db-data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: '{{ db_root_psw }}'
      MYSQL_DATABASE: '{{ wp_db_name }}'
      MYSQL_USER: '{{ wp_db_user }}'
      MYSQL_PASSWORD: '{{ wp_db_psw }}'
    restart: unless-stopped
    networks:
      - wp

networks:
  wp:
    driver: bridge
