version: '3'

services:

  https-portal:
    image: steveltn/https-portal
    volumes:
      - ./wordpress:/var/www/html
      - ./nginx:/var/www/vhosts
      - ./logs/nginx:/var/log/nginx
      - ./nginx-conf/{{ domain }}.conf.erb:/var/lib/nginx-conf/{{ domain }}.conf.erb:ro
      - ./nginx-conf/{{ domain }}.ssl.conf.erb:/var/lib/nginx-conf/{{ domain }}.ssl.conf.erb:ro
    ports:
      - '80:80'
      - '443:443'
    environment:
      CLIENT_MAX_BODY_SIZE: '100M'
      GZIP: 'on'
      DOMAINS: '{{ domain }}'
      PRODUCTION: '{{ stage }}'
    links:
      - wordpress
    restart: always
    networks:
      - wp

  wordpress:
    depends_on:
      - db
    image: wordpress:{{ wp_version }}-{{ php_fmp_version }}
    ports:
      - '9000:9000'
    volumes:
      - ./wordpress:/var/www/html
      - ./wordpress/uploads.ini:/usr/local/etc/php/conf.d/uploads.ini
    environment:
      WORDPRESS_DB_HOST: db:3306'
      WORDPRESS_DB_NAME: '{{ wp_db_name }}'
      # ToDo: templatize user
      WORDPRESS_DB_NAME: wordpress
      WORDPRESS_DB_PASSWORD: '{{ wp_db_psw }}'
    restart: always
    networks:
      - wp

  db:
    image: mysql:5.7
    volumes:
      - ./wp-db-data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: '{{ wp_db_psw }}'
      MYSQL_DATABASE: '{{ wp_db_name }}'
      # ToDo: templatize user
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: '{{ wp_db_psw }}'
    restart: always
    networks:
      - wp

networks:
  wp:
